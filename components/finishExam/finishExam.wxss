/* components/finishExam/finishExam.wxss */
.win{
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 50;
    background: rgba(0, 0, 0, .8);
    display: flex;
    justify-content: center;
    align-items: center;
    visibility: hidden;
    opacity: 0;
    transition: all .3s;
}
.win.show{
    visibility: visible;
    opacity: 1;
}
.inner{
    width: 500rpx;
    height: 542rpx;
    background: #fff;
    border-radius: 16rpx;
    position: relative;
    overflow: hidden;
}
.close{
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 44rpx;
    height: 44rpx;
}
.examCanvasContainer{
    position: absolute;
    width: 304rpx;
    height: 304rpx;
    left: 50%;
    top: 50rpx;
    transform: translate(-50%);
}
.examCanvasContainer.hide{
    width: 0;
    height: 0;
    overflow: hidden;
}
.examCanvas{
    width: 100%;
    height: 100%;
}
.leftTime{
    font-size: 28rpx;
    color: #5a5a5a;
    text-align: center;
    margin-top: 390rpx;
}
.commit{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 50%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #666;
    font-size: 30rpx;
    background: #eee;
}
.notCommit{
    position: absolute;
    right: 0;
    bottom: 0;
    width: 50%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-size: 30rpx;
    background: #6597ed;
}