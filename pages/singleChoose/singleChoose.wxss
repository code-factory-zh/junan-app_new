/* pages/singleChoose/singleChoose.wxss */
.footer{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background: #fff;
    height: 90rpx;
}
.collection{
    position: absolute;
    left: 25rpx;
    top: 0;
    height: 100%;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #5a5a5a;
}
.collectionImg{
    width: 35rpx;
    height: 35rpx;
    margin-right: 15rpx;
}
.total{
    position: absolute;
    right: 35rpx;
    top: 0;
    height: 100%;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #5a5a5a;
}
.totalImg{
    width: 37rpx;
    height: 36rpx;
    margin-right: 10rpx;
}
.questionContent{
    position: fixed;
    left: 0;
    right:0;
    top:116rpx;
    bottom: 90rpx;
    padding: 95rpx 55rpx 45rpx 55rpx;
}
.question{
    height: 100%;
    background: #fff;
    border-radius: 30rpx;
    padding: 40rpx 55rpx;
    box-sizing: border-box;
}
.examBack{
   position: fixed;
    left: 0;
    right:0;
    top:116rpx;
    bottom: 90rpx;
}
.examBackImg{
    width: 100%;
    height: 100%;
}
.title{
    font-size: 38rpx;
    color: #333;
    line-height: 60rpx;
    margin-bottom: 40rpx;
}
.type{
    display: inline-block;
    line-height: 48rpx;
    border: 2rpx solid #016fcb;
    padding: 0 25rpx;
    border-radius: 48rpx;
    color: #016fcb;
    font-sie: 24rpx;
    margin-right: 10rpx;
}
.option{
    display: flex;
    padding: 30rpx 35rpx;
    font-size: 28rpx;
    color: #333;
    background: #f0f0f0;
    border-radius: 98rpx;
    min-height: 98rpx;
    box-sizing: border-box;
    margin-bottom: 30rpx;
    line-height: 40rpx;
}
.option.on{
    color: #fff;
    background: #10cda3;
}
.saveAnswer{
    height: 98rpx;
    line-height: 98rpx;
    border-radius: 98rpx;
    background: #6597ed;
    color: #fff;
    font-size: 28rpx;
    color: #fff;
    margin-top: 80rpx;
    margin-bottom: 50rpx;
}
.countDown{
    position: absolute;
    left: 0;
    top: 30rpx;
    font-size: 30rpx;
    color: #fff;
    width: 100%;
    text-align: center;
}
