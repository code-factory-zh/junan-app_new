.title{
    height: 40rpx;
    font-size: 30rpx;
    color: rbg(0,0,0);
    text-align: center;
    margin: 30rpx auto 30rpx;
}
/*输入框*/
.inputStyle, .picker{
    margin: 0 50rpx 25rpx;
    height: 88rpx;
    border: 2rpx solid #f2f2f2;
    border-radius: 44rpx;
    font-size: 30rpx;
    color: rgb(51,51,51);
    padding-left: 40rpx;
    line-height: 88rpx;
}
/*相机*/
.camera{
    width: 300rpx;
    height: 370rpx;
    margin: 85rpx auto;
    display: block;
}
