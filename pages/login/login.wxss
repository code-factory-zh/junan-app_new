/* pages/login/login.wxss */
/* 登录页背景 */
.loginBack{
    position: relative;
}
.loginBackImg{
    width: 100%;
    height: 605rpx;
}
.logoImg{
    position: absolute;
    left: 50%;
    top: 100rpx;
    width: 371rpx;
    height: 413rpx;
    transform: translate(-50%);
}
.appName{
    position: absolute;
    left: 0;
    top: 460rpx;
    font-size: 48rpx;
    color: #fff;
    display: block;
    width: 100%;
    text-align: center;
}
/* 公司名选择框 */
.picker{
    height: 108rpx;
    margin: 0 50rpx;
    line-height: 108rpx;
    border: 2rpx solid #f2f2f2;
    border-radius: 54rpx;
    text-align: center;
    font-size: 30rpx;
    color: #999;
    position: relative;
}
.downArrow{
    position: absolute;
    right: 50rpx;
    top: 46rpx;
    width: 28rpx;
    height: 16rpx;
}
.pleaseSel,.haveSelect{
    color: #999;
    font-size: 30rpx;
}
/* 手机号输入框 */
.inputTel{
    margin: 60rpx 50rpx 50rpx;
    height: 108rpx;
    border: 2rpx solid #f2f2f2;
    border-radius: 54rpx;
    font-size: 30rpx;
    color: #999;
    text-align: center;
}
/* 登录按钮 */
.loginContainer{
    box-sizing: border-box;
    padding: 0 50rpx;
    width: 100%;
    position: fixed;
    bottom: 82rpx;
    left:0;
}
.loginBtn{
    height: 108rpx;
    background: #77aafd;
    color: #fefefe;
    font-size: 30rpx;
    line-height: 108rpx;
    border-radius: 54rpx;
}
.loginBtnActive{
    background: #5493fb;
}
