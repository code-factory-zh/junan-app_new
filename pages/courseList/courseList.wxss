/* pages/courseList/courseList.wxss */
.banner{
    width: 100%;
    height: 250rpx;
    display: block;
}
.line{
    height: 200rpx;
    border-bottom:2rpx solid #f5f5f5;
    position: relative;
}
.examBtn{
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translate(0,-50%);
}
.redBtn{
    color: red !important;
    border-color: red !important;
}
.disabledBtn{
    color: #ccc !important;
    border-color: #ccc !important;
}
.courseInfo{
    padding: 0 160rpx 0 40rpx;
}
.courseName{
    font-size: 38rpx;
    color: #333;
    padding: 50rpx 0 25rpx 0;
}
.chapter{
    font-size: 24rpx;
    color: #aab2cc;
}
.num{
    color: #6686f1;
}